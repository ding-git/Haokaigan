<h1>Listing tips</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Tips link</th>
    <th>Content</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @tips.each do |tip| %>
  <tr>
    <td><%= tip.name %></td>
    <td><%= tip.tips_link %></td>
    <td><%= tip.content %></td>
    <td><%= link_to 'Show', tip %></td>
    <td><%= link_to 'Edit', edit_tip_path(tip) %></td>
    <td><%= link_to 'Destroy', tip, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

