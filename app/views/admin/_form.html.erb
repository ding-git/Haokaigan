<p id="notice"><%= notice %></p>

<div id="admin_form">

<% @establish.each do |establish| %>

<span>	
	ID：<%= params[:id]+'- ' if !params[:id].nil?  %><%= establish.id %>  // Create：
	<%= link_to '单元', admin_index_new_path %> |
	<%= link_to '节', new_chapter_path(:id => params[:id]) %>	|
	<%= link_to '文章', new_note_path(:id => establish.id) %>	
</span> 

<%= form_for(establish) do |f| %>


<% if @chapter_s == true %>
<h1>编辑详细内容:  <%= link_to establish.name, admin_chapter_path(:id => establish.id) %></h1>
<% end %>

<% if @note_s == true %>
<h1>编辑详细内容:  <%= link_to establish.name, admin_note_path(:id => params[:id],:chapter => establish.id) %></h1>
<% end %>

  <% if establish.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(establish.errors.count, "error") %> prohibited this establish from being saved:</h2>

      <ul>
      <% establish.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description,:rows => 3 %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>


<% end %>

</div>